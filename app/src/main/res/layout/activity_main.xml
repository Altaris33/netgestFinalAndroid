<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#404040" android:layout_width="match_parent">

    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="500sp"
            android:id="@+id/rv_client_liste"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
    />
    <android.support.v7.widget.Toolbar
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:background="#FFFFFF"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/toolbar" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
            android:layout_width="121dp"
            android:layout_height="77dp" app:srcCompat="@drawable/catgris"
            android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="240dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="Clients"
            android:layout_width="162dp"
            android:layout_height="64dp"
            android:id="@+id/textViewNomPage"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="46dp" android:layout_marginStart="40dp"
            app:layout_constraintStart_toStartOf="parent" style="@android:style/Widget.DeviceDefault.Light.TextView"
            android:fontFamily="sans-serif" android:layout_marginTop="20dp"/>


    <Button
            android:layout_width="69dp"
            android:layout_height="64dp"
            android:id="@+id/btnAjoutClient"
            android:text="+" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="9dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"/>

</android.support.constraint.ConstraintLayout>
