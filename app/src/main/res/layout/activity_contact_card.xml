<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:background="#7A7A7A">

    <TextView
            android:text="Nom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textViewNom" android:textSize="30sp"
            android:layout_marginLeft="20sp" android:layout_marginRight="20sp" android:layout_marginTop="10sp"/>
    <TextView
            android:text="Telephone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textViewTelephone" android:textSize="20sp"
            android:layout_marginLeft="20sp" android:layout_marginRight="20sp" android:layout_marginTop="10sp"/>
    <TextView
            android:text="Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textViewMail" android:textSize="20sp"
            android:layout_marginLeft="20sp" android:layout_marginRight="20sp" android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"/>
</LinearLayout>