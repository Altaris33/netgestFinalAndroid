<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="#7A7A7A"
        android:padding="16dp">

    <android.support.v7.widget.CardView
            android:id="@+id/cv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#7A7A7A">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/textViewTitreMateriel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="100sp"
                    android:text="Nom en dur"
                    android:textSize="30sp" />

            <TextView
                    android:id="@+id/textViewAdresseMateriel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="100sp"
                    android:layout_marginTop="10dp"
                    android:text="IP EN DUR"
                    android:textSize="20sp" />

        </LinearLayout>

        <ImageView
                android:id="@+id/person_photo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="10sp"
                android:layout_marginTop="10sp"
                android:src="@drawable/magnifier" />

        <TextView
                android:id="@+id/textViewTypeMateriel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="250dp"
                android:layout_marginTop="52sp"
                android:layout_marginEnd="0sp"
                android:text="Type en Dur"
                android:textSize="20sp" />

    </android.support.v7.widget.CardView>

</LinearLayout>